{
  "kind": "collectionType",
  "collectionName": "products",
  "info": {
    "name": "Product",
    "description": ""
  },
  "options": {
    "increments": true,
    "timestamps": true,
    "draftAndPublish": true
  },
  "attributes": {
    "Name": {
      "type": "string"
    },
    "Price": {
      "type": "integer"
    },
    "Description": {
      "type": "richtext"
    },
    "Negotiable": {
      "type": "boolean"
    },
    "Images": {
      "collection": "file",
      "via": "related",
      "allowedTypes": [
        "images",
        "files",
        "videos"
      ],
      "plugin": "upload",
      "required": false
    },
    "Category": {
      "type": "enumeration",
      "enum": [
        "rings",
        "earrings",
        "necklaces",
        "bracelets",
        "jewellery",
        "homeware",
        "miscellaneous"
      ]
    },
    "Sold": {
      "type": "boolean"
    }
  }
}
